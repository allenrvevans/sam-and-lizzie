:root {
  font-size: 16px;
  font-family: 'Montserrat', sans-serif;
  color: #41433F;
  font-weight: 400;
}
body {
  margin: 0;

}
h3,
h4{
  font-weight: 500;
}
@font-face {
  font-family: 'Santorini';
  src: url('<%= asset_path("SantoriniRegular.woff") %>') format('woff');
}

 .body_container {
   width: 100vw;
   height: 100%;
 }
 @media only screen and (max-width: 60rem) {
  .body_container {
    background-color: transparent;
  }
}
 .shadow {
  -webkit-box-shadow: 0px 3px 36px 0px rgba(120, 133, 114,0.5);
  -moz-box-shadow: 0px 3px 36px 0px rgba(120, 133, 114,0.5);
  box-shadow: 0px 3px 36px 0px rgba(120, 133, 114,0.5);

}
.fancy_heading {
  font-family: 'Santorini';
  font-size: 2.5rem;
  font-weight: 400;
  margin: 0.7rem 0 0 0;
  text-align: center;
}
  @media only screen and (max-width: 60rem) {
    .fancy_heading {
    font-size: 2rem;
    line-height: 5;
    }
  }
 .sub_heading {
  font-size: 1.2rem;
  margin: 0;
  text-align: center;
 }
 @media only screen and (max-width: 60rem) {
  .sub_heading {
  font-size: 1rem;
  }
}
.img_container {
  background-image: url(<%= asset_path 'flowers1.png' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
}
@media only screen and (max-width: 30rem) {
  .img_container {
    background-image: url(<%= asset_path 'flowers2.png' %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center 7.5rem;
  }
}
 .header {
   display: flex;
   justify-content: center;
   flex-wrap: wrap;
 }
 .navigation_container {
   width: 100%;
   display: flex;
   justify-content: center;
   padding: 1.25rem 0 .7rem 0;
 }
 .navigation {
  display: flex;
  flex-wrap: wrap;
  padding: 0.5rem;
  max-width: 40rem;
 }
 @media only screen and (min-width: 55rem) {
  .navigation {
    max-width: 55rem;
  }
}
 @media only screen and (max-width: 40rem) {
  .navigation {
    justify-content: center;
  }
}
 .nav-elements {
   padding: .6rem 1rem;
   border: 0.1rem solid #dfedd8;
   margin: 0.25rem;
   background-color: white;
 }
 .nav-elements:hover {
   background-color:  #dfedd8;
 }

 .nav-elements > a {
  text-decoration: none;
  color: #41433F;
 }
 .nav-elements > a:hover {
  font-weight: 500;
 }
 .copy_container {
  display: flex;
  justify-content: center;
  background-color: #dfedd8;
  height: 100vh;
}
.copy {
  max-width: 40rem;
  background-color: white;
  padding: 1rem 2rem;
  margin: 2rem 0;
  min-height: 30rem;
  width: 100%;
}
@media only screen and (max-width: 45rem) {
  .copy {
  background-color: #dfedd8;
  margin: 0;
  }
}
.copy > p {
  line-height: 1.75;
}
.copy > p > a,
.copy > p > span > a,
.copy > ul > li > a {
  text-decoration: underline;
  color: #41433F;
  font-weight: 500;
}
.copy > ul > li {
  line-height: 2;
}
.copy_heading {
  font-family: 'Santorini';
  font-size: 1.75rem;
  font-weight: 400;
  margin: 1rem 0 0 0;
}
#names {
  text-align: center;
  line-height: 3.5;
}

.img {
  object-fit: contain;
  width: 100%;
}
.couple_img {
  margin-top: 2rem;
}
.hands_img {
  padding: 1rem 0;
}
.form_label {
  line-height:2.25;
  padding-right: 0.5rem;
}
.w-100 {
  width: 100%;
  display: block;
}
.w-60 {
  width: 60%;
}
.form_field {
  padding: 0.3rem;
  margin-bottom: 0.5rem;
  border: 0.02rem solid lightgray;
}
.form_section_heading {
  margin: 0.5rem 0;
}
.submit_button {
  padding: .6rem 1rem;
  border: 0.1rem solid #dfedd8;
  background-color: #dfedd8;
  margin: 1rem 0;
}
.form_field,
.submit_button {
  font-family: Montserrat;
  font-size: 1rem;
  color: #41433F;
}
.flex_grow {
  display: flex;
  flex-grow: 1;
}